<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Bookings</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body style="background-color: #addae6;">

  <!-- Header section -->
  <header>
    <h1>Manage Your Bookings</h1>
  </header>

  <main>
    <h2>Bookings</h2>

    <!-- Display the bookings -->
    <table>
      <thead>
        <tr>
          <th>Customer Name</th>
          <th>Location</th>
          <th>Booking Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr>
            <!-- Booking details -->
            <td><%= booking.customer_name %></td>
            <td><%= booking.location %></td>
            <td><%= booking.booking_date %></td>
            <td>
              <!-- Edit Booking -->
              <form action="/edit-booking/<%= booking.id %>" method="POST" style="display:inline;">
                <input type="hidden" name="id" value="<%= booking.id %>">
                <input type="text" name="customer_name" value="<%= booking.customer_name %>" required>
                <input type="text" name="location" value="<%= booking.location %>" required>
                <input type="date" name="booking_date" value="<%= booking.booking_date %>" required>
                <button type="submit">Save</button>
              </form>

              <!-- Delete Booking (cancel) -->
              <form action="/delete-booking/<%= booking.id %>" method="POST" style="display:inline;">
                <button type="submit">Cancel</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Add a New Booking -->
    <h3>Add a New Booking</h3>
    <form action="/add-booking" method="POST">
      <label for="customer_name">Customer Name:</label>
      <input type="text" name="customer_name" required>
      <label for="location">Location:</label>
      <input type="text" name="location" required>
      <label for="booking_date">Booking Date:</label>
      <input type="date" name="booking_date" required>
      <button type="submit">Add Booking</button>
    </form>
  </main>

</body>
</html>
